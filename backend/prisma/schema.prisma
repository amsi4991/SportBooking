generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  staff
  user
}

enum CourtType {
  singolo
  doppio
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  phone     String?
  city      String?
  role      Role     @default(user)
  wallet    Wallet?
  bookings  Booking[]
  bookingPlayers BookingPlayer[] @relation("bookingPlayers")
  transactions Transaction[]
  refreshTokens RefreshToken[]
  createdAt DateTime @default(now())
}

model Wallet {
  id        String        @id @default(uuid())
  balance   Int           @default(0)
  userId    String        @unique
  user      User          @relation(fields: [userId], references: [id])
  transactions Transaction[]
}

model Court {
  id       String    @id @default(uuid()) @db.Uuid
  name     String
  city     String
  sport    String
  description String?
  image    String?
  bookings Booking[]
  priceRules PriceRule[]
  blocks   CourtBlock[]
}

model Booking {
  id        String   @id @default(uuid())
  userId    String
  courtId   String   @db.Uuid
  courtType CourtType
  startsAt  DateTime
  endsAt    DateTime
  totalPrice     Int
  paidWithWallet Boolean @default(false)
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  court Court @relation(fields: [courtId], references: [id])
  players BookingPlayer[]

  @@index([courtId, startsAt, endsAt])
}

model BookingPlayer {
  id        String   @id @default(uuid())
  bookingId String
  userId    String
  createdAt DateTime @default(now())

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  user    User    @relation(name: "bookingPlayers", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([bookingId, userId])
}

model RefreshToken {
  id        String   @id @default(uuid())
  tokenHash String
  userId    String
  revoked   Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model PriceRule {
  id        String   @id @default(uuid()) @db.Uuid
  courtId   String   @db.Uuid
  weekday   Int
  startTime DateTime
  endTime   DateTime
  price     Int

  court Court @relation(fields: [courtId], references: [id])

  @@index([courtId, weekday])
}

enum TransactionType {
  deposit
  withdrawal
  refund
  booking_payment
}

model CourtBlock {
  id        String   @id @default(uuid())
  courtId   String   @db.Uuid
  startTime String   // HH:mm (es: "14:00")
  endTime   String   // HH:mm (es: "18:00")
  daysOfWeek Int[]    // Array di numeri: 0=lunedì, 1=martedì, ..., 6=domenica
  createdAt DateTime @default(now())

  court Court @relation(fields: [courtId], references: [id], onDelete: Cascade)

  @@index([courtId])
}

model Transaction {
  id          String          @id @default(uuid())
  walletId    String
  userId      String
  type        TransactionType
  amount      Int             // in cents
  description String?
  createdAt   DateTime        @default(now())

  wallet Wallet @relation(fields: [walletId], references: [id])
  user   User   @relation(fields: [userId], references: [id])

  @@index([userId, createdAt])
  @@index([walletId, createdAt])
}