generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  staff
  user
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(user)
  wallet    Wallet?
  bookings  Booking[]
  refreshTokens RefreshToken[]
  createdAt DateTime @default(now())
}

model Wallet {
  id      String @id @default(uuid())
  balance Int    @default(0)
  userId  String @unique
  user    User   @relation(fields: [userId], references: [id])
}

model Court {
  id       String    @id @default(uuid()) @db.Uuid
  name     String
  bookings Booking[]
  priceRules PriceRule[]
}

model Booking {
  id        String   @id @default(uuid())
  userId    String
  courtId   String   @db.Uuid
  startsAt  DateTime
  endsAt    DateTime
  totalPrice     Int
  paidWithWallet Boolean @default(false)
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  court Court @relation(fields: [courtId], references: [id])

  @@index([courtId, startsAt, endsAt])
}

model RefreshToken {
  id        String   @id @default(uuid())
  tokenHash String
  userId    String
  revoked   Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model PriceRule {
  id        String   @id @default(uuid()) @db.Uuid
  courtId   String   @db.Uuid
  weekday   Int
  startTime DateTime
  endTime   DateTime
  price     Int

  court Court @relation(fields: [courtId], references: [id])

  @@index([courtId, weekday])
}